{
  "name": "telegram-notes-bot",
  "version": "1.0.0",
  "description": "Telegram Notes Bot with Bun, TypeScript, SQLite, Drizzle ORM",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:push": "bunx drizzle-kit push:sqlite",
    "db:generate": "bunx drizzle-kit generate:sqlite",
    "deploy": "wrangler deploy",
    "deploy:d1:create": "wrangler d1 create notes-db",
    "deploy:d1:migrate": "wrangler d1 execute notes-db --remote --file=./migrations/0001_init.sql",
    "deploy:d1:migrate:sessions": "wrangler d1 execute notes-db --remote --file=./migrations/0002_sessions.sql"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.0",
    "grammy": "^1.24.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250530.0",
    "@types/bun": "latest",
    "drizzle-kit": "^0.20.0",
    "hono": "^4.10.7",
    "typescript": "^5.3.0",
    "wrangler": "^4.53.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
